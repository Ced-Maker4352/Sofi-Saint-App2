rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all access - update these rules based on your app's requirements
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Example: Public read access for a specific collection
    // match /public_data/{docId} {
    //   allow read: if true;
    //   allow write: if request.auth != null;
    // }
    
    // Example: Private user data (only owner can access)
    // match /users/{userId} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    // }
    
    // Example: Signed-in users only
    // match /shared_data/{docId} {
    //   allow read, write: if request.auth != null;
    // }
    
    // TEMPORARY: Remote debug logs for iOS crash debugging
    match /debug_logs/{logId} {
      allow create: if request.auth != null;
    }
  }
}
